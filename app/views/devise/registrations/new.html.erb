<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-div">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field', placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-field', placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-field', placeholder: "Password confirmation" %>
    </div>

    <div class="button button-color1">
      <%= f.submit "Sign Up" %>
    </div>
  </div>
<% end %>

