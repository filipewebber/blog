<%= form_with(model: post) do |form| %>
  <div class="form-div">
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.number_field :user_id, id: :post_user_id, class:"form-field", value: current_user.id, type: "hidden" %>
    </div>
    <div class="field">
      <%= form.label :url, "Title:", class:"form-label" %>
      <%= form.text_field :title, autofocus: true, id: :title, class:"form-field" %>
    </div>
    <div class="field">
      <%= form.label :url, "Youtube link:", class:"form-label" %>
      <%= form.text_field :url, id: :post_url, class:"form-field", placeholder: "https://www.youtube.com/watch?v=7W33HRc1A6c" %>
    </div>

    <div class="field">
      <%= form.label :description, "Description:", class:"form-label" %>
      <%= form.text_area :description, id: :post_description, class:"form-field", rows: 4 %>
    </div>

    <div class="button button-color1">
      <%= form.submit %>
    </div>
  </div>    
<% end %>
